# Application
APP_NAME=Pterodactyl
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app
APP_TIMEZONE=Asia/Jakarta
APP_KEY=

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Database - Railway will provide these via MySQL service
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Redis - Railway will provide these via Redis service
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Mail Configuration (Optional - configure based on your email provider)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# Hashids (for URL obfuscation)
HASHIDS_SALT=
HASHIDS_LENGTH=8

# Trusted Proxies (Railway uses proxies)
TRUSTED_PROXIES=*
